<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="success" size="64"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">Authentic</view>
            <view class="weui-msg__desc">名称：{{name}}</view>
            <view class="weui-msg__desc">型号：{{type}}</view>
            <view class="weui-msg__desc">产地：{{origin}}</view>
            <view class="weui-msg__desc">生产日期：{{birthday}}</view>
        </view>
        <view class="weui-msg__tips-area">
            <view class="weui-msg__tips">官方价格:{{price}}</view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="copy">复制信息</button>
            </view>
        </view>
    </view>
</view>