<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="success" size="64"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">Succeed</view>
            <view class="weui-msg__desc">下次交易可抵扣{{price}}元</view>
        </view>
        <view class="weui-msg__tips-area">
            <view class="weui-msg__tips">点击获取凭证</view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="certificate">获取凭证</button>
            </view>
        </view>
    </view>
</view>